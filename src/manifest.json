{
	"author": "Nikita Zhurawski",
	"name": "ZefirChecker",
	"manifest_version": 2,
	"version": "1.0.1",
	"version_name": "initial",
	"browser_action": {
		"default_icon": {
			"16": "images/img16.png",
			"32": "images/img32.png",
			"48": "images/img48.png",
			"128": "images/img128.png"
		}
	},
	"content_scripts": [
		{
			"matches": [
				"https://jira.skywindgroup.com/projects/*"
			],
			"css": [
				"styles.css"
			],
			"js": [
				"zefir.js"
			],
			"run_at": "document_end"
		}
	],
	"icons": {
		"16": "images/img16.png",
		"32": "images/img32.png",
		"48": "images/img48.png",
		"128": "images/img128.png"
	},
	"permissions": [
		"<all_urls>",
		"activeTab",
		"tabs"
	]
}